<p id="notice"><%= notice %></p>

<h1>Listing Blog Posts</h1>

<%= link_to 'New Blog post', new_blog_post_path %>
  <div class ="row">
      <div class="col-md-6 col-md-offset-3">
    <% @blog_posts.each do |blog_post| %>
       <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">
             <span class="label label-danger">
              <%= blog_post.author %>
            </span>
            <%= blog_post.title %>
          </h3>
        </div>
          <div class="panel-body">       
            <%= blog_post.blog_entry %>
          </div>
          <div class = "panel-footer">  
            <%= link_to 'Show', blog_post %>
            <%= link_to 'Edit', edit_blog_post_path(blog_post) %>
            <%= link_to 'Destroy', blog_post, method: :delete, data: { confirm: 'Are you sure?' } %>
          </div>
          
      </div>
      <% end %>
    </div>
  </div>

<br>
